<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="list_item_name">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="list_item_others">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">8sp</item>

    </style>

    <style name="highlight_title_white">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="highlight_title_black">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="highlight_subtitle_white">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="highlight_subtitle_black">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="highlight_text">
        <item name="fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="round_button">
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="round_button_function">
        <item name="android:background">@drawable/rounded_shape_function</item>
    </style>

    <style name="round_image_background">
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>